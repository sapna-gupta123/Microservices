@model WebApp.Services.ProductService.Dto.ProductDto

    <div class="pagetitle">
        <h1>@(Model.Id == Guid.Empty ? "Create Product" : "Edit Product")</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active"> @(Model.Id == Guid.Empty ? "Create" : "Edit")</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                    <h5 class="card-title">@("Product")</h5>
                        <form asp-action="CreateOrEdit" method="post" enctype="multipart/form-data" class="row g-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-12">
                                <label asp-for="Name" class="form-label">Name</label>
                                <div class="input-group has-validation">
                                    <input asp-for="Name" type="text" class="form-control" required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <label asp-for="CategoryId" class="form-label">Category</label>
                                <div class="input-group has-validation">
                                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select" required>
                                        <option value="">Select a category</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                                
                            </div>
                            <div class="col-12">
                                <label asp-for="Manufacturer" class="form-label">Manufacturer</label>
                                <div class="input-group has-validation">
                                    <input asp-for="Manufacturer" type="text" class="form-control" required>
                                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <label asp-for="Quantity" class="form-label">Quantity</label>
                                <div class="input-group has-validation">
                                    <input asp-for="Quantity" type="number" class="form-control" required>
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <label asp-for="Price" class="form-label">Price</label>
                                <div class="input-group has-validation">
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" required>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <label asp-for="ProductImage" class="form-label">File Upload</label>
                                <div class="input-group has-validation">
                                    <input name="productImage" type="file" class="form-control" accept=".jpg, .jpeg">
                                </div>
                                @if (Model.ProductImage != null)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProductImage)" alt="Product Image" class="img-thumbnail mt-2" style="max-height: 200px;">
                                }
                            </div>

                            <div class="text-center">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

